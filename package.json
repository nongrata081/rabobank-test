{
  "name": "rabobank-test",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --hmr --configuration hmr -o",
    "build": "ng build",
    "test:app": "ng test rabobank-test",
    "test:lib": "ng test components",
    "test:parser": "mocha --opts ./mocha.opts",
    "lint:app": "ng lint rabobank-test",
    "lint:lib": "ng lint components",
    "e2e": "ng e2e",
    "commit": "git-cz",
    "prettify": "pretty-quick",
    "prettify-staged": "pretty-quick --staged",
    "webdriver-update-ci": "webdriver-manager update --standalone false --gecko false --versions.chrome 2.37",
    "coverage": "ng test --watch=false --code-coverage rabobank-test components --karma-config=./src/coverage-karma.conf.js",
    "changelog": "./node_modules/.bin/conventional-changelog -p angular -i CHANGELOG.md -s",
    "build:client-and-server-bundles": "ng build --prod && ng run rabobank-test:server",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors",
    "build:ssr": "yarn build:client-and-server-bundles && yarn webpack:server",
    "serve:ssr": "node dist/server.js",
    "ssr": "yarn build:ssr && yarn serve:ssr",
    "enforce:gitflow": "node ./node_modules/.bin/enforce-gitflow-branches",
    "parse:csv:records": "node ./scripts/statement_processor/parser/csv2json.js",
    "parse:xml:records": "node ./scripts/statement_processor/parser/xml2json.js",
    "merge:records": "node ./scripts/statement_processor/parser/mergeRecords.js",
    "validate:records": "node ./scripts/statement_processor/validator/validateRecords.js",
    "copy:records:to:assets": "cp ./records/dist/invalid-records.json src/assets/records/",
    "records": "yarn parse:csv:records && yarn parse:xml:records && yarn merge:records && yarn validate:records && yarn copy:records:to:assets",
    "bundle:report": "webpack-bundle-analyzer dist/rabobank-test/stats.json",
    "lighthouse:mobile": "node ./node_modules/.bin/lighthouse http://localhost:4000 --output-path ./lighthouse-mobile-report.html",
    "lighthouse:desktop": "node ./node_modules/.bin/lighthouse http://localhost:4000 --disable-device-emulation --output-path ./lighthouse-desktop-report.html",
    "backstop":"node ./node_modules/backstopjs/cli/index.js",
    "backstop:reference": "yarn backstop reference",
    "backstop:test": "yarn backstop test && yarn backstop openReport",
    "backstop:approve": "yarn backstop approve",
    "backstop:open:latest": "yarn backstop openReport"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^6.1.9",
    "@angular/cdk": "^6.4.7",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angular/material": "^6.4.7",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/platform-server": "^6.1.9",
    "@angular/router": "^6.1.0",
    "@nguniversal/module-map-ngfactory-loader": "^6.1.0",
    "angular-bootstrap-md": "^6.2.4",
    "async": "1.5.2",
    "chart.js": "^2.7.2",
    "core-js": "^2.5.4",
    "express": "^4.16.3",
    "hammerjs": "^2.0.8",
    "normalize.css": "^8.0.0",
    "rxjs": "^6.0.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.7.0",
    "@angular-devkit/build-ng-packagr": "~0.7.0",
    "@angular/cli": "~6.1.5",
    "@angular/compiler-cli": "^6.1.0",
    "@angularclass/hmr": "^2.1.3",
    "@commitlint/cli": "^7.1.2",
    "@commitlint/config-conventional": "^7.1.2",
    "@commitlint/travis-cli": "^7.1.2",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "@types/webpack-env": "^1.13.6",
    "backstopjs": "^3.7.0",
    "chai": "^4.2.0",
    "chai-fs": "^2.0.0",
    "codelyzer": "~4.2.1",
    "commitizen": "^2.10.1",
    "conventional-changelog-cli": "^2.0.5",
    "csvtojson": "^2.0.8",
    "cz-conventional-changelog": "^2.1.0",
    "enforce-gitflow-branches": "^1.0.8",
    "husky": "^1.0.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "lighthouse": "^3.2.1",
    "mocha": "^5.2.0",
    "mocha-steps": "^1.1.0",
    "ng-packagr": "^3.0.0",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.3",
    "pretty-quick": "^1.7.0",
    "protractor": "~5.4.0",
    "rewire": "^4.0.1",
    "ts-loader": "^5.2.1",
    "ts-node": "~5.0.1",
    "tsickle": ">=0.29.0",
    "tslib": "^1.9.0",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2",
    "webpack-bundle-analyzer": "^3.0.2",
    "webpack-cli": "^3.1.1",
    "xml2json": "^0.11.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "run-s prettify-staged lint:app lint:lib",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-push": "yarn enforce:gitflow && yarn prettify && yarn test:parser && yarn lint:app && yarn lint:lib && yarn test:app --watch=false && yarn test:lib --watch=false && yarn coverage && yarn e2e && yarn build && yarn backstop:test"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ]
}
